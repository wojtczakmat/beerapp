<h1>Listing events</h1>
 
<%= link_to 'New event', new_event_path %>


<table>
  <tr>
    <th>Title</th>
    <th>Date</th>
    <th>Time</th>
 </tr>
 
  <% @events.each do |event| %>
    <tr>
      <td><%= event.title %></td>
      <td><%= event.date %></td>
      <td><%= event.time.strftime "%R" %></td>
      <td><%= link_to 'Show', event_path(event) %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'Back', controller: 'welcome' %>